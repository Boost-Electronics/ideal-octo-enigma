<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/style.css">
    <title>Future Projects | Sam Potts</title>
    <style>
        .centered-title {
            margin-top: 40px !important;
        }
        .btn-back-home {
    /* Changed to fixed so it stays visible while scrolling through sections */
    position: fixed; 
    top: 25px; /* Slightly higher to sit neatly inside the 12px border */
    left: 25px;
    padding: 8px 16px;
    font-size: 0.7rem;
    font-weight: 700;
    letter-spacing: 2px;
    color: #94a3b8;
    text-decoration: none;
    text-transform: uppercase;
    border: 1px solid rgba(148, 163, 184, 0.3);
    border-radius: 4px;
    background: rgba(11, 18, 33, 0.8); /* Darker background to pop against images */
    backdrop-filter: blur(12px);
    transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
    z-index: 10001; /* High z-index to stay above everything */
}

.btn-back-home:hover {
    color: #ffffff;
    border-color: #3b82f6;
    background: rgba(59, 130, 246, 0.2);
    box-shadow: 0 0 20px rgba(59, 130, 246, 0.4);
    transform: translateY(-2px);
}
    </style>
</head>
<body>
    <div class="viewport-wrapper">
        
        <section class="section-intro" style="height: 100vh; justify-content: center;">
            <header class="wide-header">
                <h1>Upcoming Work</h1>
                
                <p class="bio-wide" style="margin-bottom: 40px;">
                    Future projects in PCB Design, Efficient Electrical Systems, and More.
                </p>

                <div class="hero-btns">
                    <a href="/" class="btn-back-home">Return Home</a>
                </div>
            </header>
        </section>
    </div>
   <div class="divider-wrap">
    <div class="horizontal-line"></div>
    </div>
    <section class="section-projects-wide">
        <div class="projects-grid-full">
            <div class="card-wide">
                <h2>PCB Designs</h2>
                <p>Exploring PCB layouts for enhanced performance and reliability in various applications.</p>
            </div>
            <div class="card-wide">
                <h2>Efficient Energy Systems</h2>
                <p>Research into efficient electrical systems. Currently exploring efficient power management from solar cells to power a sattelite project.</p>
            </div>
            <div class="card-wide">
                <h2>Custom Drone</h2>
                <p>Developing Custom drone, with an ESP-32 flight controller, coded in C++.
                    The Drone will contain a BMI277 IMU for flight stabilization and data anaylsis.
                </p>
            </div>
            <div class="card-wide">
                <h2>IC Design</h2>
                <p>Future Silicon IC Designs.</p>
        </div>
    </section>
     <script>
    const observerOptions = {
        threshold: 0.2 // Trigger when 20% of the element is visible
    };

    const observer = new IntersectionObserver((entries) => {
        entries.forEach(entry => {
            if (entry.isIntersecting) {
                // If it's the line, draw it
                if (entry.target.classList.contains('horizontal-line')) {
                    entry.target.classList.add('is-visible');
                } 
                // If it's a card, fade it in with a stagger
                else if (entry.target.classList.contains('card-wide')) {
                    entry.target.classList.add('fade-in');
                }
            }
        });
    }, observerOptions);

    // Observe the horizontal line
    document.querySelectorAll('.horizontal-line').forEach(line => {
        observer.observe(line);
    });

    // Observe each card and add a staggered transition-delay
    document.querySelectorAll('.card-wide').forEach((card, index) => {
        // Adds a 200ms delay multiplied by the card's index (0ms, 200ms, 400ms...)
        card.style.transitionDelay = `${index * 0.4}s`;
        observer.observe(card);
    });
</script>     
</body>
</html>